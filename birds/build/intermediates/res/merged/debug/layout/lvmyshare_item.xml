<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView 
	    android:id="@+id/ms_pscount"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="20dp"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:text="8"
	    android:textSize="12sp"/>
	
	<TextView 
	    android:id="@+id/ms_star"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/ms_pscount"
	    android:layout_marginRight="10dp"
	    android:layout_toLeftOf="@id/ms_pscount"
	    android:text="收藏"
	    android:textSize="12sp"/>
	
	<TextView 
	    android:id="@+id/ms_plcount"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/ms_pscount"
	    android:layout_toLeftOf="@id/ms_star"
	    android:layout_marginRight="20dp"
	    android:text="20"
	    android:textSize="12sp"/>
	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/ms_pscount"
	    android:layout_toLeftOf="@id/ms_plcount"
	    android:layout_marginRight="10dp"
	    android:text="赞"
	    android:textSize="12sp"/>   
	    
	<TextView 
	    android:id="@+id/ms_pt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/ms_pscount"
	    android:layout_marginLeft="30dp"
	    android:layout_alignParentLeft="true"
	    android:text="这是一首好诗"/>
	
	<TextView 
	    android:id="@+id/ms_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/ms_pt"
	    android:layout_marginTop="5dp"
	    android:layout_marginRight="20dp"
	    android:paddingBottom="10dp"
	    android:layout_alignParentBottom="true"
	    android:text="2016-3-25"
	    android:textSize="12sp"/>
	
	<ImageView 
	    android:layout_width="14dp"
	    android:layout_height="14dp"
	    android:src="@drawable/clock"
	    android:layout_marginTop="4dp"
	    android:layout_marginRight="5dp"
	    android:layout_alignTop="@id/ms_date"
	    android:layout_toLeftOf="@id/ms_date"/>						
    
</RelativeLayout>
